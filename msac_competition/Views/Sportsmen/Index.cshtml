@model IList<SportmanViewModel>
@{
    ViewData["Title"] = @Resources.Titles.Sportsmen;
}

@*<div class="container">  *@
<div class="row">
    <h1>@Resources.Titles.Sportsmen</h1>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>@Resources.TableHeads.Photo</th>
                <th>@Resources.TableHeads.Surname</th>
                <th>@Resources.TableHeads.Firstname</th>
                <th>@Resources.TableHeads.Lastname</th>
                <th>@Resources.TableHeads.Birthday</th>
                <th>@Resources.TableHeads.Sportrank</th>
                <th>@Resources.TableHeads.Coach</th>
                <th>@Resources.TableHeads.Team</th>
                <th>@Resources.TableHeads.Update</th>
                <th>@Resources.TableHeads.Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sportman in Model)
            {
                <tr>
                    <td>@sportman.Avatar</td>
                    <td>@sportman.Surname</td>
                    <td>@sportman.Name</td>
                    <td>@sportman.Lastname</td>
                    <td>@sportman.DaTeOfBirth</td>
                    <td>@sportman.SportRank</td>
                    <td>@sportman.CoachPib</td>
                    <td>@sportman.Team.Name</td>
                    <td><a asp-action="Create">@Resources.TableHeads.Update</a></td>
                    <td><a asp-action="Create">@Resources.TableHeads.Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-info">@Resources.Buttons.Create</a>
</div>
@*</div>*@




